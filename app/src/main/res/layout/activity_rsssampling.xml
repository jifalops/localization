<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RssSamplingActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:background="#333"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/eventScrollView">
        <TextView
            android:id="@+id/eventLog"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="Events:\n"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <ScrollView
        android:background="#333"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/deviceScrollView">
        <TextView
            android:id="@+id/deviceLog"
            android:text="Devices:\n"
            android:textAppearance="?android:textAppearanceSmall"
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/btCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="BT"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/btleCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:checked="true"
            android:text="BT-LE"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/wifiCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="WiFi"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/wifi5gCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="WiFi 5G"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:columnCount="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Device IDs"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:text="Distance (m)"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Collect"/>
        <TextView
            android:id="@+id/deviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="0,0,0"/>
        <EditText
            android:id="@+id/distanceMeters"
            android:inputType="numberDecimal"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:selectAllOnFocus="true"
            android:gravity="center_horizontal"
            android:hint="0.0"/>
        <Switch
            android:id="@+id/collectSwitch"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </GridLayout>
    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <GridLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:columnCount="5">
            <Space />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="BT"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="BTLE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="WIFI"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="WIFI5G"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="RSSI"/>
            <TextView
                android:id="@+id/btRssiCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
            <TextView
                android:id="@+id/btleRssiCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
            <TextView
                android:id="@+id/wifiRssiCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
            <TextView
                android:id="@+id/wifi5gRssiCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Range"/>
            <TextView
                android:id="@+id/btRangeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
            <TextView
                android:id="@+id/btleRangeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
            <TextView
                android:id="@+id/wifiRangeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
            <TextView
                android:id="@+id/wifi5gRangeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="0"/>
        </GridLayout>
        <Button
            android:id="@+id/sendButton"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="Send">
            <requestFocus />
        </Button>
    </LinearLayout>
</LinearLayout>